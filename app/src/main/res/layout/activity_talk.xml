<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Talk">

    <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/string_talk"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
            android:id="@+id/listen_button"

            android:layout_width="320dp"
            android:layout_height="320dp"

            android:layout_marginStart="45dp"
            android:layout_marginTop="136dp"
            android:layout_marginEnd="46dp"

            android:background="@drawable/mic_icon_radius"
            android:contentDescription="@string/string_talk"
            android:scaleType="centerCrop"
            android:tint="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:srcCompat="@android:drawable/ic_btn_speak_now" />

    <TextView
            android:id="@+id/alert_listen"

            android:layout_width="119dp"
            android:layout_height="46dp"

            android:layout_marginStart="146dp"
            android:layout_marginTop="77dp"
            android:layout_marginEnd="146dp"

            android:layout_marginBottom="85dp"
            android:text="@string/alert_talk"
            android:textColor="@color/colorAccent"
            android:textSize="36sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/listen_button"
            app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>