<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="#ffffff"
        tools:context=".add_group">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_group"
                android:textSize="50sp"
                android:gravity="center_horizontal"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="グループID"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:background="#fcad03"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/add_group_id"
                    android:hint="ここにIDが表示されます"
                    android:textSize="30sp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
            <Button
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="発行"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/main_orange_radius"
                    android:id="@+id/change_button"/>
        </LinearLayout>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
        <Button
                android:text="グループ作成"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/add_groupid_button"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:background="@drawable/main_orange_radius"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>